<%= form_for :list_item, url: todo_list_list_items_path(@todo_list), remote: true, html: { class: 'form-inline' } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <%= f.submit 'Add', class: 'btn btn-default' %>
<% end %>

<ul id="list_items">
  <%= render partial: "list_items/list_item", collection: list_items %>
</ul>
